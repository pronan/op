worker_processes  1;
error_log  logs/error.log;
pid logs/nginx.pid;

events {
    worker_connections  1024;
}


http {
    include       mime.types;
    default_type  "text/html; charset=UTF-8";
    lua_code_cache off;
    access_log  off;
    sendfile        on;
    keepalive_timeout  65;
    #lua_package_path '${prefix};;';

    init_by_lua_file app/init.lua;

    server {
        listen       8000;
        server_name  127.0.0.1;

        location / {
            #root   html;
            content_by_lua_file app/start.lua;
        }

        location = /favicon.ico {
            alias static/images/favicon.ico;
        }

        location /images {
            alias /static/images;
        }

        location /css {
            alias /static/css;
        }

        location /js {
            alias /static/js;
        }    

        error_page   500 502 503 504  /50x.html;
        location = /50x.html {
            root   html;
        }
        
        location = /404.html {
            root   html;
        }
    }


 
}
