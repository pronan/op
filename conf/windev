worker_processes  1;
error_log  logs/error.log  error;
pid logs/nginx.pid;

events {
    worker_connections  1024;
}


http {
    include       mime.types;
    default_type  "text/html; charset=UTF-8";

    access_log  off;
    sendfile        on;
    keepalive_timeout  65;
    #lua_package_path '${prefix};;';

    init_by_lua_file config/init.lua;

    server {
        listen       8000;
        server_name  127.0.0.1;

        location / {
            root   html;
            content_by_lua_file config/start.lua;
        }

        location = /json {
            #default_type "application/json";
            content_by_lua_block{
                ngx.header.content_type = 'application/json';
                ngx.say(encode({ngx.var.http_cookie}))
            }
        }

        location = /favicon.ico {
            alias images/favicon.ico;
        }

        location /images {
            alias images;
        }

        location /js {
            alias js;
        }

        location /css {
            alias css;
        }

       
        error_page   500 502 503 504  /50x.html;
        location = /50x.html {
            root   html;
        }

    }


 
}
