worker_processes  1;
error_log  logs/error.log;
pid logs/nginx.pid;

events {worker_connections  1024;}

http {
    #include       mime.types;
    default_type  "text/html; charset=utf-8";
    access_log  off;
    sendfile        on;
    keepalive_timeout  65;
    lua_code_cache off;
    #autoindex on;
    init_by_lua_file app/init.lua;

    server {
        listen       8080;
        server_name  localhost;
        root html;
        include mime.types;
        set $session_secret 623q4hR325t36VsCD3g567922IC0073T;
        
        location = / {
            try_files /base.html =404;
        }
        
        location / {
            content_by_lua_file app/main.lua;
        }
        location = /form1 {
            content_by_lua_block{
                local render = require"resty.template".render
                local req=ngx.req
                ngx.say(ngx.req.raw_header())
                req.read_body()
                local args, err = req.get_post_args()
                for k,v in pairs(args) do
                    ngx.say(k, ':::', v)
                end
                render("app/form.html")
            }
        }
        location = /test {
            content_by_lua_file app/test.lua;
        }

        location = /favicon.ico {
            root html/static/images;
        }

        location /css { 
            root html/static;
        }
        location /js { 
            root html/static;
        }
        location /images { 
            root html/static;
        }

    }


 
}
